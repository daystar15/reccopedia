<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.reccopedia.spoiler.dao.SpoilerDAO">

	<select id="selectSpoilerByApiIdOrUserIdOrSpoiler" parameterType="map" resultType="int">
		SELECT
			COUNT(1)
		FROM
			`spoiler`
		WHERE
			`apiId` = #{apiId}
			AND `userId` = #{userId}
			AND `spoiler` = #{spoiler}
	</select>
	

	<insert id="insertSpoiler" parameterType="map">
		INSERT INTO `spoiler`
 		(
 			`apiId`
			, `userId`
			, `spoiler`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{apiId}
 			, #{userId}
 			, #{spoiler}
 			, now()
 			, now()
 		)
	</insert>
	
	<delete id="deleteSpoilerByApiIdUserIdSpoiler" parameterType="map">
		DELETE
		FROM
			`spoiler`
		WHERE
			`apiId` = #{apiId}
			AND `userId` = #{userId}
			AND `spoiler` = #{spoiler}
	</delete>
	

</mapper>