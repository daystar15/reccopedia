<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.reccopedia.comment.dao.CommentDAO">
 
 	<select id="selectCommentByApiIdOrUserId" parameterType="map" resultType="int">
		SELECT
			COUNT(1)
		FROM
			`comment`
		WHERE
			`apiId` = #{apiId}
			<if test="userId != null">
			AND `userId` = #{userId}
			</if>
	</select>
 
 	<insert id="createComment" parameterType="map">
 		INSERT INTO `comment`
 		(
 			`apiId`
			, `pointId`
			, `userId`
			, `content`
			, `spoiler`
			, `createdAt`
			, `updatedAt`
 		)
 		VALUES
 		(
 			#{id}
 			, #{pointId}
 			, #{userId}
 			, #{content}
 			, #{spoiler}
 			, NOW()
 			, NOW()
 		)
 	</insert>
 	
 	<select id="selectCommentListByApiId" parameterType="int" resultType="com.reccopedia.comment.model.Comment">
 		SELECT
 			`id`
			, `apiId`
			, `pointId`
			, `userId`
			, `content`
			, `spoiler`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`apiId` = #{id}
 	</select>
 	
 	<select id="selectCommentListById" parameterType="int" resultType="com.reccopedia.comment.model.Comment">
 		SELECT
 			`id`
			, `apiId`
			, `pointId`
			, `userId`
			, `content`
			, `spoiler`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
 	</select>
 	
 	<select id="selectCommentListByUserId" parameterType="int" resultType="com.reccopedia.comment.model.Comment">
 		SELECT
 			`id`
			, `apiId`
			, `pointId`
			, `userId`
			, `content`
			, `spoiler`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`userId` = #{id}
 	</select>
 	
 	<select id="selectCommentListByApiIdAndUserId" parameterType="map" resultType="com.reccopedia.comment.model.Comment">
 		SELECT
 			`id`
			, `apiId`
			, `pointId`
			, `userId`
			, `content`
			, `spoiler`
			, `createdAt`
			, `updatedAt`
		FROM
			`comment`
		WHERE
			`apiId` = #{id}
			<if test="userId != null">
			AND
			`userId` = #{userId}
			</if>
		ORDER BY `updatedAt` DESC
		LIMIT 1;
 	</select>
 	
 	<delete id="deleteCommentByUserIdApiId" parameterType="int">
 		DELETE
 		FROM
 			`comment`
 		WHERE
 			`id` = #{id}
 	</delete>
 	
 	<update id="updateComment" parameterType="map">
 		UPDATE `comment`
 		SET
 			`id` = #{id}
			, `spoiler` = #{spoiler}
 			, `userId` = #{userId}
 			, `content` = #{content}
 			, `updatedAt` = NOW()
 		WHERE
 			`id` = #{id}
 			AND `userId` = #{userId}
 	</update>
 
 </mapper>